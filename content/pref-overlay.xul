<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<prefwindow id="sass-prefs"
     title="SASS Preferences"
	 xmlns:html="http://www.w3.org/1999/xhtml"
     xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	
	<prefpane id="sass-pane" label="SASS Preferences">
		
		<preferences>
			<preference id="pref_tooltipY" name="extensions.sass.tooltipY" type="int"/>
			<preference id="pref_compile" name="extensions.sass.compilerEnabled" type="bool"/>
			<preference id="pref_compress" name="extensions.sass.compressFile" type="bool"/>
		</preferences>
		
		<!--<image maxheight="64" maxwidth="252" src="chrome://sass/content/sass-icon.png" />-->
		
		<html:h3>
			On file save
		</html:h3>
		<checkbox id="compile-file" preference="pref_compile" checked="true" label="Compile file"/>
		
		<checkbox id="compress-file" preference="pref_compress" checked="true" label="Compress file"/>
		  
		<html:h3>
			Advandced Settings
		</html:h3>
		
		<label value="Calibrate tooltip vertical position" />
		<menulist id="tooltipY" preference="pref_tooltipY" label="Calibrate tooltip vertical position">
			<menupopup>
				<menuitem value="-5" label="10"/>
				<menuitem value="-4" label="9"/>
				<menuitem value="-3" label="8"/>
				<menuitem value="-2" label="7"/>
				<menuitem value="-1" label="6"/>
				<menuitem value="0" label="5"/>
				<menuitem value="1" label="4"/>
				<menuitem value="2" label="3"/>
				<menuitem value="3" label="2"/>
				<menuitem value="4" label="1"/>
				<menuitem value="5" label="0"/>
				<menuitem value="6" label="-1"/>
				<menuitem value="7" label="-2"/>
				<menuitem value="8" label="-3"/>
				<menuitem value="9" label="-4"/>
				<menuitem value="10" label="-5"/>
				<menuitem value="11" label="-6"/>
				<menuitem value="12" label="-7"/>
				<menuitem value="13" label="-8"/>
				<menuitem value="14" label="-9"/>
				<menuitem value="15" label="-10"/>
			</menupopup>
		</menulist>
	</prefpane>

</prefwindow>
